<%= bootstrap_form_for(@celestial_body) do |f| %>
  <%= f.text_field :name, label: 'Nome:' %>
  <%= f.text_field :typology, label: 'Tipologia:' %>
  <%= f.time_field :ascension, step: '0.01', label: 'Ascensione retta:' %>
  <%= f.number_field :declination, step: '1', label: 'Declinazione:' %>
  <%= f.number_field :magnitudo, step: '0.01', label: 'Magnitudine:' %>
  <%= f.number_field :size, step: '0.01', label: 'Grandezza:' %>
  <%= f.number_field :separation, label: 'Separazione:' %>
  <%= f.text_field :constellation, label: 'Costellazione:' %>
  <%= f.number_field :map_chart_number, step: '1', label: 'Numero mappa:' %>
  <%= f.submit 'Conferma' %>
<% end %>
